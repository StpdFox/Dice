<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clipToPadding="false"
    android:background="@drawable/arrowbackground"
    android:layout_gravity="bottom"
    tools:context="powertools.mpowerdice.MainActivity">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NameView"
        android:hint="Name here"

        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/QuestionView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <TextView

        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QuestionView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Question here" />



    <ImageButton
        android:background="#c9e6ba"
        android:src="@drawable/dice"
 android:scaleType="centerCrop"
        android:foregroundGravity="center"
        android:adjustViewBounds="false"
        android:scaleX=".4"
        android:scaleY=".4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next User"
        android:id="@+id/btnRand"

        android:layout_below="@+id/NameView"
        android:layout_alignEnd="@+id/btnNext"
        android:layout_marginTop="54dp" />

    <ImageButton
        android:background="#FFFFFF"
        android:src="@drawable/skipbutton"
        android:scaleX=".7"
        android:scaleY=".7"
        android:foregroundGravity="left"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"

        android:id="@+id/btnSkip"
        android:layout_alignTop="@+id/btnNext"
        android:layout_toStartOf="@+id/NameView" />

    <ImageButton
        android:background="#FFFFFF"
        android:src="@drawable/nextquestion"
        android:scaleX=".8"
        android:scaleY=".8"
        android:foregroundGravity="right"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btnNext"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/NameView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/btnRand"
        android:layout_alignParentStart="true"
        android:layout_marginStart="213dp" />
</RelativeLayout>
